{
  "name": "blog-app",
  "version": "2.0.0",
  "description": "A Blog app",
  "keywords": [
    "blog",
    "tailwindcss"
  ],
  "homepage": "https://github.com/jrdrwn/blog-app#readme",
  "bugs": {
    "url": "https://github.com/jrdrwn/blog-app/issues",
    "email": "jordirwn@gmail.com"
  },
  "author": "Jordi Irawan <jordirwn@gmail.com> (https://jrdrwn.github.io/)",
  "license": "MIT",
  "main": "./public/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrdrwn/blog-app.git"
  },
  "scripts": {
    "dev": "npm run tailwind:watch",
    "prod": "npm run tailwind:minify && npm run minify",
    "tailwind:watch": "tailwindcss -i ./src/css/style.css -o ./public/css/style.css --watch",
    "tailwind:minify": "tailwindcss -i ./src/css/style.css -o ./public/css/style.css --minify",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "minify": "node scripts/prod.mjs"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "glob": "^8.0.3",
    "live-server": "^1.2.2",
    "minify": "^9.1.0",
    "node-html-parser": "^5.3.3",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "private": true,
  "dependencies": {
    "daisyui": "^2.15.3",
    "tailwindcss": "^3.1.2"
  }
}
